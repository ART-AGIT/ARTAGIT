<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.artagit.web.dao.ExhLikeDao">
	<insert id="add" parameterType="ExhLike">
		insert into ExhLike(memId, exhId)
		values(#{memId}, #{exhId})
	</insert>
	
	<delete id="delete" parameterType="ExhLike">
		delete from ExhLike
		where exhId=#{exhId} and memId=#{memId}
	</delete>
	
	<select id="getLikeByExhId" resultType="ExhLike">
		select * from ExhLike
		where exhId = #{exhId}
	</select>
	
	<select id="getLikeByMemId" resultType="ExhLike">
		select * from ExhLike
		where memId = #{memId}
	</select>
	
	<select id="count" resultType="int">
		select count(id) from ExhLike 
		where exhId=#{exhId}
	</select>
	
	<select id="getCount" resultType="int">
		select count(id) 
		from ExhLike where  memId =#{id};
	</select>
	

	
</mapper>