<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.artagit.web.dao.PaymentDao">
	<select id="findByBookingId" resultType="com.artagit.web.entity.Payment">
		select *
		from Payment
		where bookId = #{bookId}
	</select>
	
	<!-- 결제내역 insert -->
	<insert id="add" parameterType="com.artagit.web.entity.Payment">
		insert into Payment (payNum, price, method, bookId)
			values (#{payNum}, #{price}, #{method}, #{bookId});
	</insert>
	
</mapper>